@code {
    ButtonGroup buttonGroup;

    string[] buttonsSource = new string[] { "Monthly billing", "Annual billing" };
    int monthlyPrice = 0;
    int yearlyPrice = 0;

    private void OnChange(Event eventObj)
    {
        if (monthlyPrice == 39)
        {
            monthlyPrice = 399;
            yearlyPrice = 1499;
        }
        else
        {
            monthlyPrice = 39;
            yearlyPrice = 179;
        }
    }
} 
