@page "/e-commerce-details"

<style>
    smart-carousel {
        width: 100%;
        height: 375px;
    }

    .product-details .product-img {
        width: 600px
    }
    
    .product-details .company-name {
        font-weight: 600;
        margin-left: .25rem
    }
    
    .product-details .product-features {
        margin-top: 1.5rem;
        margin-bottom: 1.5rem
    }
    
        .product-details .product-features li {
            display: -webkit-box;
            display: -webkit-flex;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-align: center;
            -webkit-align-items: center;
            -ms-flex-align: center;
            align-items: center;
            margin-bottom: 1rem
        }
    
            .product-details .product-features li i {
                height: 1rem;
                width: 1rem;
                font-size: 1rem;
                margin-right: .75rem;
                color: var(--smart-primary);
            }
    
            .product-details .product-features li span {
                font-weight: 600
            }
    
    .smart-toggle-box .smart-container,
    .smart-toggle-box.smart-container {
        width: 30px;
    }
    
    .smart-radio-button.purple {
        --smart-primary: #7367F0;
        --smart-background: var(--smart-primary);
        --smart-ui-state-border-active: var(--smart-primary);
        --smart-ui-state-active: var(--smart-primary);
    }
    
    .smart-radio-button.green {
        --smart-primary: #28C76F;
        --smart-background: var(--smart-primary);
        --smart-ui-state-border-active: var(--smart-primary);
        --smart-ui-state-active: var(--smart-primary);
    }
    
    .smart-radio-button.red {
        --smart-primary: #EA5455;
        --smart-background: var(--smart-primary);
        --smart-ui-state-border-active: var(--smart-primary);
        --smart-ui-state-active: var(--smart-primary);
    }
    
    .smart-radio-button.orange {
        --smart-primary: #ea9b55;
        --smart-background: var(--smart-primary);
        --smart-ui-state-border-active: var(--smart-primary);
        --smart-ui-state-active: var(--smart-primary);
    }

    @@media screen and (max-width: 1199px) {
        .slides-holder .item {
            width: 50%;
        }

        .slides-holder .item:last-of-type {
            display: none;
        }
    }

    .fa, .fas {
        font-weight: 900;
    }

    .fa, .far, .fas {
        font-family: "Font Awesome 5 Free";
    }

    .fa, .fab, .fad, .fal, .far, .fas {
        -moz-osx-font-smoothing: grayscale;
        -webkit-font-smoothing: antialiased;
        display: inline-block;
        font-style: normal;
        font-variant: normal;
        text-rendering: auto;
        line-height: 1;
    }

    .font-size-40px {
        font-size: 40px !important;
    }

    .fa-medal:before {
        content: "\f5a2";
    }

    .fa-clock:before {
        content: "\f017";
    }

    .fa-shield-alt:before {
        content: "\f3ed";
    }

    .related-products-carousel {
        width: 100%;
        max-width: 100%;
        position: relative;
        background: transparent;
    }

        .related-products-carousel .smart-indicator {
            border-radius: 100%;
        }

        .related-products-carousel .smart-arrow {
            opacity: 0.7;
            border-radius: 100%;
        }

        .related-products-carousel.smart-calculated-height .slides-holder {
            height: 100%;
        }

        .related-products-carousel .slides-holder {
            display: flex;
            align-items: center;
            justify-content: center;
            align-content: center;
            position: relative;
            width: 100%;
        }

        .related-products-carousel .item {
            min-height: 100%;
            margin: 15px;
            position: relative;
            height: 100%;
            width: 33%;
            text-align: center;
            display: flex;
            justify-content: space-between;
            flex-flow: column;
            padding: 25px 15px;
        }

            .related-products-carousel .item img {
                max-width: 80%;
            }


    .bg-secondary-opacity-1 {
        background: rgba(108, 117, 125, 0.1);
    }

    .border {
        border: 1px solid #dee2e6 !important;
    }
</style>

<Example Name="SampleApps">
    <div class="container">
        <div class="row">
            <div class="col-12 mb-3"><h4>Product Details</h4></div>
        </div>

        <div class="card product-details">
