@page "/buttons"

<style>
    .button-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .button-container:not(:last-child) {
            margin-bottom: 10px;
        }

    smart-button:not(:last-child) {
        margin-right: 10px;
    }


    smart-button.icon > button {
        display: flex;
        align-items: center;
    }

    .icon-text:nth-child(3) {
        margin-bottom: 30px;
    }

    .icon-text smart-button.icon > button > .material-icons,
    .icon-text smart-button.icon > button > img {
        margin-right: 5px;
    }

    smart-button.icon > button > img {
        filter: invert(1);
    }

    smart-button.settings span.material-icons,
    smart-button.spa span.material-icons {
        width: 24px;
    }

    smart-button span.material-icons {
        margin-right: 0;
    }

    .twitter {
        --smart-primary: #1DA1F2;
    }

    .reddit {
        --smart-primary: tomato;
    }

    .youtube {
        --smart-primary: red;
    }

    .instagram {
        --smart-primary: #A13091;
    }    
</style>

<Example Name="UIElements">
    <div class="container">
        <div class="row">
            <div class="col-12 mb-3"><h4>Buttons</h4></div>
