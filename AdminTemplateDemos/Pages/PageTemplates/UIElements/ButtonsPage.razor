                                maximus pretium justo.
                            </DropDownButton>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card mb-5">
                    <div class="card-header">
                        <h4 class="label">Button Group</h4>
                    </div>
                    <div class="card-body">
                        <div class="button-container">
                            <ButtonGroup DataSource="buttonsSource" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Example>

