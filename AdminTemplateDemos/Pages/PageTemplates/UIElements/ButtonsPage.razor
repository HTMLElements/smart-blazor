                    <div class="card-header">
                        <h4 class="label">Button Sizes</h4>
                    </div>
                    <div class="card-body">
                        <div class="button-container">
                            <Button Class="primary very-small">Very small</Button>
                            <Button Class="primary small">Small</Button>
                            <Button Class="primary large">Large</Button>
                        </div>
                        <div class="button-container icon-text">
                            <Button Class="primary icon very-small"><span class="material-icons">zoom_in</span>Very small</Button>
                            <Button Class="primary icon small"><span class="material-icons">zoom_in</span>Small</Button>
                            <Button Class="primary icon large"><span class="material-icons">zoom_in</span>Large</Button>
