    <div class="options">
        <div class="caption"></div>
        <div class="option">
            <Button OnClick="OnSaveState">Save state</Button><br /><br />
            <Button OnClick="OnLoadState">Load state</Button><br />
            <br />
            <br />
            <CheckBox OnChange="OnSortedChange">Sorted tree</CheckBox>
        </div>
    </div>



@code {
    Tree tree;
    bool sorted = false;

    private void OnSaveState()
    {
        tree.SaveState();
    }

    private void OnLoadState()
    {
        tree.LoadState();
    }

    private void OnSortedChange(Event eventObj)
    {
        CheckBoxChangeEventDetail args = eventObj["Detail"];
        sorted = args.Value;
    }
}
