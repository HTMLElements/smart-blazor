    <div class="options">
        <div class="caption">Settings</div>
        <div>
            <p>Toggle element position:</p><br />
            <RadioButton Checked="near" OnCheckValue="OnNearChecked">Near</RadioButton><br />
            <RadioButton OnCheckValue="OnFarChecked">Far</RadioButton>
        </div>
        <br />
        <CheckBox OnChange="OnAutoHideChange">Auto-hide toggle element</CheckBox>
    </div>


@code {
    Position tree1ToggleElementPosition = Position.Near;
    Position tree2ToggleElementPosition = Position.Near;
    bool near = true;
    bool tree1AutoHideToggleElement = false;
    bool tree2AutoHideToggleElement = false;

    private void OnNearChecked(Event eventObj)
    {
        tree1ToggleElementPosition = Position.Near;
        tree2ToggleElementPosition = Position.Near;
        near = true;
    }

    private void OnFarChecked(Event eventObj)
    {
        tree1ToggleElementPosition = Position.Far;
        tree2ToggleElementPosition = Position.Far;
        near = false;
    }

    private void OnAutoHideChange(Event eventObj)
    {
        CheckBoxChangeEventDetail args = eventObj["Detail"];
        bool isChecked = args.Value;

        tree1AutoHideToggleElement = isChecked;
        tree2AutoHideToggleElement = isChecked;
    }
}
 