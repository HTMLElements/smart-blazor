@page "/tree-update"

<style>
    smart-tree {
        width: 60%;
        height: 450px;
    }

    @@media only screen and (max-width: 700px) {
        smart-tree {
            width: 100%;
            height: 100%;
        }
    }
</style>


    <Tree @ref="tree">
        @foreach (var treeItem in StringItems)
        {
            <TreeItemsGroup>
                @treeItem
                <TreeItem>
                    @treeItem
                </TreeItem>
            </TreeItemsGroup>
        }
    </Tree>
    <ListBox @ref="listBox">
        @foreach (var listItem in StringItems)
        {
<ListItem>@listItem</ListItem>}
    </ListBox>

    <Button @onclick="OnClick">Update</Button>



@code {
    Tree tree;
    ListBox listBox;

    public List<string> StringItems { get; set; } = new List<string>();

    protected override void OnInitialized()
    {
        base.OnInitialized();

        this.StringItems = new List<string>()
        {
            "Item 1",
        };
    }

    private void OnClick()
    {
        StringItems.Add("Item 3");
        listBox.StateHasChanged();
        tree.StateHasChanged();
    }
}
