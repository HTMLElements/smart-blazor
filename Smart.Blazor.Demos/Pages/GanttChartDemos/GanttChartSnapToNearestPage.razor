@page "/ganttchart-snap-to-nearest"

@using Smart.Blazor.Demos.Data

<style>
    /* This is the CSS used in the demo */
    smart-gantt-chart {
        height: 300px;
    }
</style>

<Example Name="GanttChart">
    <p>
        <b>Description:</b> Drag and Drop a task inside the Timeline. The task will snap to the nearest cell.
    </p>

    <GanttChart DataSource="Records" SnapToNearest />
</Example>

