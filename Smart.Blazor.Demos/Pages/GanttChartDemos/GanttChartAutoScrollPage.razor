@page "/ganttchart-auto-scroll"

@using Smart.Blazor.Demos.Data

<style>
    /* This is the CSS used in the demo */
    smart-gantt-chart {
        width: calc(100% - 300px);
        height: auto;
    }
    @@media (max-width: 600px)
    {
        smart-gantt-chart {
            width: 100%;
            height: auto;
        }
    }
</style>

<Example Name="GanttChart">
    <p>
        Gantt's "autoScroll" is enabled. When dragging "autoScrollStep" determines the speed at which the view will be scrolled. Drag a Task Bar outside of view to see the behavior.
    </p>

    <GanttChart DataSource="Records" AutoScrollStep="5" />
</Example>

@code {   
    public List<GanttDataRecord> Records;

    protected override void OnInitialized()
    {
        Records = new List<GanttDataRecord>()
        {
            new GanttDataRecord()
            {
                Label = "Project 1",
                DateStart = "2020-03-10",
                DateEnd = "2021-06-10",
                Expanded = true,
                Type = "project",
                Tasks = new List<GanttDataRecord>()
                {
                    new GanttDataRecord()
                    {
                        Label = "Task 1.1",
                        DateStart = "2020-5-10",
                        DateEnd = "2021-4-10",
                        Type = "task"
                    },
                    new GanttDataRecord()
                    {
                        Label = "Task 1.2",
                        DateStart = "2020-3-27",
                        DateEnd = "2021-6-10",
                        Type = "task"
                    },
                    new GanttDataRecord()
                    {
                        Label = "Milestone 1",
                        DateEnd = "2021-3-15",
                        Type = "milestone"
                    }
                }
            },
            new GanttDataRecord()
            {
                Label = "Task 2",
                DateStart = "2021-6-21",
                DateEnd = "2021-12-10",
                Type = "task"
            }
        };
    }
}
