@page "/table-expandable-rows"

@using Smart.Blazor.Demos.Data
@inject RandomDataService dataService

<style>
    body,
    html,
    app {
        height: 100%;
    }

    app {
        overflow: auto;
    }

    .content {
        height: calc(100% - 70px);
    }

    /* This is the CSS used in the demo */
    .smart-table {
        --smart-table-row-detail-height: 110px;
        width: 100%;
    }

        .smart-table .smart-table-detail-container {
            display: flex;
        }

    .element-cell {
        border: 2px solid black;
        width: 75px;
        height: 85px;
        padding: 2px;
        margin-right: 10px;
    }

    .element-symbol,
    .element-name,
    .element-weight {
        text-align: center;
    }

    .element-symbol {
        font-weight: bold;
        font-size: 30px;
    }

    .element-name,
    .element-weight {
        font-size: 10px;
    }

    .element-no {
        height: 16px;
    }

    .element-symbol {
        height: 34px;
    }
</style>

    <p>
        This demo showcases how to enable expandable rows with row details in smart-table.
    </p>

    <Table DataSource="chemicalElementsData" KeyboardNavigation="true" RowDetailTemplate="@rowDetailTemplate" Columns="@columns"></Table>    


