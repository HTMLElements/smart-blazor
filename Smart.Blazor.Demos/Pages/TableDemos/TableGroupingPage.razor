@page "/table-grouping"

@using Smart.Blazor.Demos.Data
@inject RandomDataService dataService

<style>
    body,
    html,
    app {
        height: 100%;
    }

    app {
        overflow: auto;
    }

    .content {
        height: calc(100% - 70px);
    }

    /* This is the CSS used in the demo */
    .smart-table {
        height: 500px;
    }
</style>

<button @onclick=onclick>Refresh</button>
@if (dataRecords == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <Table @ref=table ColumnResize="true" ColumnResizeFeedback="true" Tooltip="true" Columns="@columns">
        @foreach (var dataRecord in dataRecords)
        {
            <tr hidden>
                <td>
                    <button>Configure</button>
                </td>
                <td>@dataRecord.ProductName</td>
                <td>@dataRecord.Quantity</td>
                <td>@dataRecord.Price</td>
                <td>@dataRecord.TimeOfPurchase</td>
            </tr>
        }
    </Table>
}

@code {

    private Table table;

    private List<DataRecord> dataRecords;
    List<TableColumn> columns = new List<TableColumn>()
{
      new TableColumn()
      {
         DataField = "Configure",
         Label = "Configure",
         DataType = TableColumnDataType.Any,
         Width = 120
      },
      new TableColumn()
      {
         DataField = "ProductName",
         Label = "Product Name",
         DataType = TableColumnDataType.String
      },
      new TableColumn()
      {
         DataField = "Quantity",
         Label = "Quantity",
         DataType = TableColumnDataType.Number
      },
      new TableColumn()
      {
         DataField = "Price",
         Label = "Price",
         DataType = TableColumnDataType.Number
      },
      new TableColumn()
      {
         DataField = "TimeOfPurchase",
         Label = "Date Purchase",
         DataType = TableColumnDataType.Date
      }
   };

    protected override void OnInitialized()
    {
        base.OnInitialized();
        dataRecords = dataService.GenerateData(15);
    }

    private void onclick()
    {
        table?.StateHasChanged();
    }

}