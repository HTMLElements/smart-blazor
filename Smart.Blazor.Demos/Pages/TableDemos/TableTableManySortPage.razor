@page "/table-table-many-sort"

@using Smart.Blazor.Demos.Data
@inject RandomDataService dataService

<style>
    body,
    html,
    app {
        height: 100%;
    }

    app {
        overflow: auto;
    }

    .content {
        height: calc(100% - 70px);
    }

    /* This is the CSS used in the demo */
    .sort-by::after {
        box-sizing: unset;
    }
</style>
<Example Name="Table">
    <p>
        Add "sort-mode" attribute and set it to "many" to make the Table sortable by multiple columns tbody.
    </p>

    <Table DataSource="dataRecords" SortMode="TableSortMode.Many" Columns="@columns" OnReady="OnTableReady"></Table>    
</Example>

@code {
    private List<CountryRecord> dataRecords;

    List<TableColumn> columns = new List<TableColumn>()
    {
        new TableColumn()
        {
            DataField = "Country",
            Label = "Country",

        },
        new TableColumn()
        {
            DataField = "Area",
            Label = "Area"
        },
        new TableColumn()
        {
            DataField = "Population_Rural",
            Label = "Population_Rural"
        },
        new TableColumn()
        {
            DataField = "Population_Total",
            Label = "Population_Total"
        },
        new TableColumn()
        {
            DataField = "GDP_Total",
            Label = "GDP_Total"
        }
    };

    protected override void OnInitialized()
    {
        base.OnInitialized();
        dataRecords = dataService.GenerateCountriesData();
    }

    private void OnTableReady(Table table)
    {
        table.SortBy("Country", "asc");
        table.SortBy("Population_Total", "asc");
    }
}
