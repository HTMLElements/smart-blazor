@page "/table-table-hover"

@using Smart.Blazor.Demos.Data
@inject RandomDataService dataService

<style>
    body,
    html,
    app {
        height: 100%;
    }

    app {
        overflow: auto;
    }

    .content {
        height: calc(100% - 70px);
    }

    /* This is the CSS used in the demo */
    .smart-table {
        width: 700px;
    }
</style>

    <p>
        Add .table-hover to enable a hover state on table rows within a tbody.
    </p>

    <Table class="table-hover" DataSource="dataRecords" Columns="@columns"></Table>    


@code {
    private List<CountryRecord> dataRecords;

    List<TableColumn> columns = new List<TableColumn>()
    {
        new TableColumn()
        {
            DataField = "Country",
            Label = "Country",

        },
        new TableColumn()
        {
            DataField = "Area",
            Label = "Area"
        },
        new TableColumn()
        {
            DataField = "Population_Rural",
            Label = "Population_Rural"
        },
        new TableColumn()
        {
            DataField = "Population_Total",
            Label = "Population_Total"
        },
        new TableColumn()
        {
            DataField = "GDP_Total",
            Label = "GDP_Total"
        }
    };

    protected override void OnInitialized()
    {
        base.OnInitialized();
        dataRecords = dataService.GenerateCountriesData();
    }
}
