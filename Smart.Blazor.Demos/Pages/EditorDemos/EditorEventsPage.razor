            OnDialogOpening="OnDialogOpening" OnDialogClose="OnDialogClose" OnDialogClosing="OnDialogClosing" 
            OnImageUploadSuccess="OnImageUploadSuccess" OnImageUploadFailed="OnImageUploadFailed" OnToobarItemClick="OnToobarItemClick">
