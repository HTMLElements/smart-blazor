        dropDownButtonDisabled = true;
        noneDisabled = false;
    }

    private void OnNoneClick()
    {
        dropDownOpenMode = DropDownOpenMode.None;

        defaultDisabled = false;
        autoDisabled = false;
        dropDownButtonDisabled = false;
        noneDisabled = true;
    }
