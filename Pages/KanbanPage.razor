@page "/kanban"

@using Smart.Blazor.Demos.Data
@inject RandomDataService RandomDataService

<Example Name="Kanban">

	<Kanban DataSource="Data" Columns="columns" Collapsible="true"></Kanban>
</Example>

@code {
	List<KanbanColumn> columns = new List<KanbanColumn>{
		new KanbanColumn() {
			Label = "To do",
			DataField = "ToDo"
		},
		new KanbanColumn() {
			Label = "inProgress",
			DataField = "InProgress"
		},
		new KanbanColumn() {
			Label = "Testing",
			DataField = "Testing"
		},
		new KanbanColumn() {
			Label = "Done",
			DataField = "Done"
		}
	};

	public KanbanDataRecord[] Data;

	protected override async Task OnInitializedAsync()
	{
		Data = await RandomDataService.GetKanbanDataAsync();
	}
}
